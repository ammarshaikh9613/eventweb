</head>

<body>
    <div class="container">
        <div class="card">
            <div class="form">
                <div class="left-side"> <span></span> <span></span> <span></span> <span></span> </div>
                <div class="right-side">
                    
                  
 
                 
                    <form action="/studentforgotPasswordProcess" method="post" id="login" autocomplete="off" class="bg-light border p-3">
                      
                            <div class="text-center mt-4">
                                <% const m=getMessages() %>    
                                <% if (m.notify) { %>
                                      <% m.notify.forEach((element) => { %>
                                         <div class="alert alert-danger" role="alert">
                                            <%= element %>
                                        </div>
                                  <% }) %> 
                                                            
                              <% } %>
                              
                              
                              
                              
                              <% if (m.success) { %>
                                   <% m.success.forEach((element1) => { %>
                                      <div class="alert alert-success" role="alert">
                                         <%= element1 %>
                                     </div>
                               <% }) %>                            
                              <% } %> 
                               <h3><i class="fa fa-lock fa-3x"></i></h3>
                                <h4 class="title my-2">Forgot Password</h4>
                                <p>You can reset your password here.</p>
                                <div class="form-group">
                                    <div class="input-group">
                                      <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                      <input id="email" name="student_email" placeholder="email address" class="form-control" required="true" type="email">
                                    </div>
                                  </div>
                          
                          
                          
                          <div class="col-12">
                            <button class="btn btn-primary btn-block" type="submit" >Request Password</button>
                          </div>
                          <p class="mb-1">
                            <a href="/studentlogin">Login</a>
                          </p>
                          </div>

                        
                      </form>
                    
                </div>
            </div>
        </div>
    </div>
   
</body>




</html>